{
  "name": "notepad",
  "version": "1.0.0",
  "description": "Collabrative Notepad that use js-crdt as a base.",
  "main": "server.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "tsc",
    "browserify": "browserify build/main.js --standalone app -o dist/main.js",
    "uglifyjs": "uglifyjs --screw-ie8 --compress -o dist/main.min.js dist/main.js",
    "predist": "npm run build",
    "dist": "npm run browserify && npm run uglifyjs",
    "lint": "eslint src",
    "fix": "eslint src --fix",
    "start": "tsc && node build/server.js"
  },
  "author": "widmogrod@gmail.com",
  "license": "ISC",
  "dependencies": {
    "@types/node": "^8.0.28",
    "bufferutil": "^3.0.2",
    "express": "^4.15.4",
    "utf-8-validate": "^3.0.3",
    "js-crdt": "^1.6.0",
    "ws": "^3.2.0"
  },
  "devDependencies": {
    "color-hash": "^1.0.3",
    "quill": "^1.3.2",
    "quill-cursors": "^0.1.7",
    "babel-eslint": "^7.2.3",
    "browserify": "^13.0.1",
    "eslint": "^4.7.1",
    "queueing-subject": "^0.1.1",
    "rxjs": "^5.4.3",
    "rxjs-websockets": "^1.1.0",
    "ts-node": "^3.3.0",
    "typescript": "^2.5.2",
    "typescript-eslint-parser": "^3.0.0",
    "uglify-es": "^3.1.0",
    "uglify-js": "^2.6.4"
  },
  "engines": {
    "node": "8.2.1"
  }
}
